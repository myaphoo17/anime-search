{"ast":null,"code":"import CardView from \"./components/CardView.vue\";\nimport { ref } from \"vue\";\nexport default {\n  setup() {\n    const search_query = ref(\"\");\n    const animeList = ref([]);\n    const HandleSearch = async () => {\n      try {\n        const searchQuery = ref('');\n        const response = await fetch(`https://api.jikan.moe/v4/anime?q=${searchQuery}`);\n        const data = await response.json();\n        if (response.status >= 400) {\n          console.error(\"API request error:\", response.status);\n          animeList.value = [];\n          return;\n        }\n        if (data.results && Array.isArray(data.results)) {\n          // Log the API response and the first anime object for debugging\n          console.log(\"API Response:\", data);\n          animeList.value = data.results.map(anime => ({\n            title: anime.title,\n            imageUrl: anime.image_url\n          }));\n          console.log(animeList.value);\n        } else {\n          console.error(\"Invalid API response:\", data);\n          animeList.value = [];\n        }\n      } catch (error) {\n        console.error(\"Error fetching data:\", error);\n        animeList.value = [];\n      }\n    };\n    return {\n      search_query,\n      animeList,\n      HandleSearch\n    };\n  },\n  components: {\n    CardView\n  }\n};","map":{"version":3,"names":["CardView","ref","setup","search_query","animeList","HandleSearch","searchQuery","response","fetch","data","json","status","console","error","value","results","Array","isArray","log","map","anime","title","imageUrl","image_url","components"],"sources":["D:\\Vue\\anime\\anime\\src\\App.vue"],"sourcesContent":["<template>\n  <div class=\"app\">\n    <header>\n      <h1>The <strong> Anime</strong> Database</h1>\n      <form action=\"search\" class=\"search-box\" @submit.prevent=\"HandleSearch\">\n        <input\n          type=\"search\"\n          class=\"search-field\"\n          placeholder=\"Search anime..\"\n          required\n          v-model=\"search_query\"\n        />\n      </form>\n    </header>\n\n    <main>\n      <div class=\"cards\">\n  <CardView v-for=\"anime in animeList\" :key=\"anime.mal_id\" :anime=\"anime\" />\n</div>\n\n >\n    </main>\n  </div>\n</template>\n\n<script>\nimport CardView from \"./components/CardView.vue\";\nimport { ref } from \"vue\";\n\nexport default {\n  setup() {\n    const search_query = ref(\"\");\n    const animeList = ref([]);\n\n    const HandleSearch = async () => {\n  try {\n  \n    const searchQuery = ref('');\n    const response = await fetch(`https://api.jikan.moe/v4/anime?q=${searchQuery}`);\n\n\n    const data = await response.json();\n\n    if (response.status >= 400) {\n      console.error(\"API request error:\", response.status);\n      animeList.value = [];\n      return;\n    }\n\n    if (data.results && Array.isArray(data.results)) {\n      // Log the API response and the first anime object for debugging\n      console.log(\"API Response:\", data);\n\n      animeList.value = data.results.map((anime) => ({\n        title: anime.title,\n        imageUrl: anime.image_url,\n      }));\n      console.log(animeList.value);\n    } else {\n      console.error(\"Invalid API response:\", data);\n      animeList.value = [];\n    }\n  } catch (error) {\n    console.error(\"Error fetching data:\", error);\n    animeList.value = [];\n  }\n};\n\n\n    return {\n      search_query,\n      animeList,\n      HandleSearch,\n    };\n  },\n  components: {\n    CardView,\n  },\n};\n</script>\n\n\n<style lang=\"scss\">\n* {\n  margin: 0;\n  padding: 0;\n  box-sizing: border-box;\n  font-family: Verdana, Geneva, Tahoma, sans-serif;\n}\n\na {\n  text-decoration: none;\n}\n\nheader {\n  padding-top: 5rem;\n  padding-bottom: 5rem;\n\n  h1 {\n    color: #888;\n    font-size: 4rem;\n    font-weight: 400;\n    text-align: center;\n    text-transform: uppercase;\n    margin-bottom: 3rem;\n\n    strong {\n      color: #000;\n    }\n  }\n\n  .search-box {\n    display: flex;\n    justify-content: center;\n    padding-left: 30px;\n    padding-right: 30px;\n    margin-left: 30px;\n\n    .search-field {\n      appearance: none;\n      background: none;\n      border: none;\n      outline: none;\n      background-color: #9c9c9cab;\n      box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);\n      display: flex;\n      width: 70%;\n      max-width: 600px;\n      padding: 15px;\n      border-radius: 30px;\n      color: black;\n      font-size: 1rem;\n      transition: 0.4s;\n\n      &::placeholder {\n        color: white;\n      }\n      &:focus,\n      &:valid {\n        color: white;\n        background-color: #02020283;\n        box-shadow: 0px 0px 0px rgba(0, 0, 0, 0.15);\n      }\n    }\n  }\n\n  main {\n    max-width: 1200px;\n    margin: 0 auto;\n    padding-left: 30px;\n    padding-right: 30px;\n  }\n\n  .cards {\n    display: flex;\n    flex-wrap: wrap;\n    margin: 0 -8px;\n  }\n}\n</style>\n"],"mappings":"AA0BA,OAAOA,QAAO,MAAO,2BAA2B;AAChD,SAASC,GAAE,QAAS,KAAK;AAEzB,eAAe;EACbC,KAAKA,CAAA,EAAG;IACN,MAAMC,YAAW,GAAIF,GAAG,CAAC,EAAE,CAAC;IAC5B,MAAMG,SAAQ,GAAIH,GAAG,CAAC,EAAE,CAAC;IAEzB,MAAMI,YAAW,GAAI,MAAAA,CAAA,KAAY;MACnC,IAAI;QAEF,MAAMC,WAAU,GAAIL,GAAG,CAAC,EAAE,CAAC;QAC3B,MAAMM,QAAO,GAAI,MAAMC,KAAK,CAAE,oCAAmCF,WAAY,EAAC,CAAC;QAG/E,MAAMG,IAAG,GAAI,MAAMF,QAAQ,CAACG,IAAI,CAAC,CAAC;QAElC,IAAIH,QAAQ,CAACI,MAAK,IAAK,GAAG,EAAE;UAC1BC,OAAO,CAACC,KAAK,CAAC,oBAAoB,EAAEN,QAAQ,CAACI,MAAM,CAAC;UACpDP,SAAS,CAACU,KAAI,GAAI,EAAE;UACpB;QACF;QAEA,IAAIL,IAAI,CAACM,OAAM,IAAKC,KAAK,CAACC,OAAO,CAACR,IAAI,CAACM,OAAO,CAAC,EAAE;UAC/C;UACAH,OAAO,CAACM,GAAG,CAAC,eAAe,EAAET,IAAI,CAAC;UAElCL,SAAS,CAACU,KAAI,GAAIL,IAAI,CAACM,OAAO,CAACI,GAAG,CAAEC,KAAK,KAAM;YAC7CC,KAAK,EAAED,KAAK,CAACC,KAAK;YAClBC,QAAQ,EAAEF,KAAK,CAACG;UAClB,CAAC,CAAC,CAAC;UACHX,OAAO,CAACM,GAAG,CAACd,SAAS,CAACU,KAAK,CAAC;QAC9B,OAAO;UACLF,OAAO,CAACC,KAAK,CAAC,uBAAuB,EAAEJ,IAAI,CAAC;UAC5CL,SAAS,CAACU,KAAI,GAAI,EAAE;QACtB;MACF,EAAE,OAAOD,KAAK,EAAE;QACdD,OAAO,CAACC,KAAK,CAAC,sBAAsB,E
{"ast":null,"code":"import CardView from \"./components/CardView.vue\";\nimport { ref } from \"vue\";\nexport default {\n  setup() {\n    const search_query = ref(\"\");\n    const animeList = ref([]);\n    const HandleSearch = async () => {\n      try {\n        const response = await fetch(`https://api.jikan.moe/v4/anime?q=${search_query.value}`);\n        const data = await response.json();\n        if (response.status >= 400) {\n          console.error(\"API request error:\", response.status);\n          // Set an error message for the user\n          animeList.value = [];\n          return;\n        }\n        if (data && Array.isArray(data.data)) {\n          animeList.value = data.results.map(anime => ({\n            title: anime.title,\n            imageUrl: anime.image_url // Extract the image URL\n          }));\n\n          console.log(animeList.value);\n        } else {\n          console.error(\"Invalid API response:\", data);\n          animeList.value = [];\n        }\n      } catch (error) {\n        console.error(\"Error fetching data:\", error);\n        animeList.value = [];\n      }\n    };\n    return {\n      search_query,\n      animeList,\n      HandleSearch\n    };\n  },\n  components: {\n    CardView\n  }\n};","map":{"version":3,"names":["CardView","ref","setup","search_query","animeList","HandleSearch","response","fetch","value","data","json","status","console","error","Array","isArray","results","map","anime","title","imageUrl","image_url","log","components"],"sources":["D:\\Vue\\anime\\anime\\src\\App.vue"],"sourcesContent":["<template>\n  <div class=\"app\">\n    <header>\n      <h1>The <strong> Anime</strong> Database</h1>\n      <form action=\"search\" class=\"search-box\" @submit.prevent=\"HandleSearch\">\n        <input\n          type=\"search\"\n          class=\"search-field\"\n          placeholder=\"Search anime..\"\n          required\n          v-model=\"search_query\"\n        />\n      </form>\n    </header>\n\n    <main>\n      <div class=\"cards\">\n  <CardView v-for=\"anime in animeList\" :key=\"anime.mal_id\" :anime=\"anime\" />\n</div>\n\n >\n    </main>\n  </div>\n</template>\n\n<script>\nimport CardView from \"./components/CardView.vue\";\nimport { ref } from \"vue\";\nexport default {\n  setup() {\n    const search_query = ref(\"\");\n    const animeList = ref([]);\n\n    const HandleSearch = async () => {\n  try {\n    const response = await fetch(`https://api.jikan.moe/v4/anime?q=${search_query.value}`);\n    const data = await response.json();\n\n    if (response.status >= 400) {\n      console.error(\"API request error:\", response.status);\n      // Set an error message for the user\n      animeList.value = [];\n      return;\n    }\n\n    if (data && Array.isArray(data.data)) {\n      animeList.value = data.results.map((anime) => ({\n      title: anime.title,\n      imageUrl: anime.image_url, // Extract the image URL\n    }));\n      console.log(animeList.value);\n    } else {\n      console.error(\"Invalid API response:\", data);\n     \n      animeList.value = [];\n    }\n  } catch (error) {\n    console.error(\"Error fetching data:\", error);\n\n    animeList.value = [];\n  }\n};\n\n\n    return {\n      search_query,\n      animeList,\n      HandleSearch,\n    };\n  },\n  components: {\n    CardView,\n  },\n};\n</script>\n\n<style lang=\"scss\">\n* {\n  margin: 0;\n  padding: 0;\n  box-sizing: border-box;\n  font-family: Verdana, Geneva, Tahoma, sans-serif;\n}\n\na {\n  text-decoration: none;\n}\n\nheader {\n  padding-top: 5rem;\n  padding-bottom: 5rem;\n\n  h1 {\n    color: #888;\n    font-size: 4rem;\n    font-weight: 400;\n    text-align: center;\n    text-transform: uppercase;\n    margin-bottom: 3rem;\n\n    strong {\n      color: #000;\n    }\n  }\n\n  .search-box {\n    display: flex;\n    justify-content: center;\n    padding-left: 30px;\n    padding-right: 30px;\n    margin-left: 30px;\n\n    .search-field {\n      appearance: none;\n      background: none;\